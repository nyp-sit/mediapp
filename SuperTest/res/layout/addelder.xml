<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inbg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.7"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/nopic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/tbName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tbPhone"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:ems="10"
                android:hint="Enter Name"
                android:singleLine="true" />

            <EditText
                android:id="@+id/tbPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignLeft="@+id/tbName"
                android:layout_alignRight="@+id/tbPhone"
                android:ems="10"
                android:hint="Enter Pin"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/tbNric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:ems="10"
                android:hint="Enter NRIC"
                android:singleLine="true" />

            <EditText
                android:id="@+id/tbPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignLeft="@+id/tbNric"
                android:ems="10"
                android:hint="Enter Phone No."
                android:inputType="phone"
                android:singleLine="true" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtNRICProfile"
                android:layout_below="@+id/tbName"
                android:layout_marginTop="14dp"
                android:text="Pin"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvrRetypePin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_centerVertical="true"
                android:text="Cfm Pin"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvrRetypePin"
                android:layout_below="@+id/tvrRetypePin"
                android:layout_marginTop="14dp"
                android:text="Phone"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView5"
                android:layout_below="@+id/tbPhone"
                android:layout_marginTop="16dp"
                android:text="NRIC"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtNRICProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tbPin"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView5"
                android:layout_alignLeft="@+id/tbPin"
                android:ems="10"
                android:hint="Enter Pin Again"
                android:inputType="textPassword" />

        </RelativeLayout>

<RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
       <Button
                android:id="@+id/btnregElder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Register and Add" />

       <Button
           android:id="@+id/btnPhoto"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_alignParentLeft="true"
           android:text="Take Photo" />

       <TextView
           android:id="@+id/textpicName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="27dp"
           android:text="TextView" 
           android:color = "#FF0000"
           android:visibility="invisible"/>

</RelativeLayout>
    </LinearLayout>
</LinearLayout>