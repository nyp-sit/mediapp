<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/inbg">

    <Button
        android:id="@+id/btnCancelNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnShowNotification"
        android:layout_centerHorizontal="true"
        android:text="Cancel Notification" />

    <Button
        android:id="@+id/btnShowNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCancelNotification"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnCancelNotification"
        android:layout_marginBottom="69dp"
        android:text="Show Notification" />

</RelativeLayout>